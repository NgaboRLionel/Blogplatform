<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <style>
        html {
            overflow-x:hidden;
        }
        body {
            margin:0 !important;
        }
        footer {
            color: dimgrey;
            padding-bottom: 10px;
            margin-top: 70px;
            margin-bottom: 0 !important;
        }
        
            p span a {
                color: dimgrey;
                margin-bottom:20px;
                
            }
        .underline {
            width: 90px;
            height: 3px;
            border-radius: 10px;
            margin-top: 5px;
            margin-bottom: 30px;
            background: #0d6efd;
        }
    </style>
</head>
@using Microsoft.AspNet.Identity
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse" title="more options">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Blog Platform", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>@Html.ActionLink("About", "About", "Home")</li>
                    <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                    @using Microsoft.AspNet.Identity
                    @if (Request.IsAuthenticated)
                    {
                        <li>@Html.ActionLink("My Blogs", "Index", "Blogs")</li>
                    }
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="">
        @RenderBody()
        
        <footer class="navbar-inverse">
            <div class="container">
                <div class="row container">
                    <div class="col-md-4">
                        <h3>Blog Platform<div class="underline"></div></h3>
                        <p>
                            Overall, our blog platform provides a simple and convenient way for anyone to share their ideas, opinions, and expertise with the world through blogging.
                        </p>
                    </div>
                    <div class="col-md-4">
                        <h3>Quick Links <div class="underline"></div></h3>
                        <p class="">
                    <span>@Html.ActionLink("Home", "Index", "Home")</span>
                            <br />
                            <br />
                    <span>@Html.ActionLink("About", "About", "Home")</span>
                            <br />
                            <br />
                    <span>@Html.ActionLink("Contact", "Contact", "Home")</span>
                            <br />
                            <br />
                    @using Microsoft.AspNet.Identity
                    @if (Request.IsAuthenticated)
                    {
                        <span>@Html.ActionLink("My Blogs", "Index", "Blogs")</span>
                    }
                </p>
                    </div>
                    <div class="col-md-4">
                        <h3>Team Members <div class="underline"></div></h3>
                        <p>Ganza Ntambuko Sanchess 23584</p>
                        <p>Twahirwa Mandela 23995</p>
                        <p>Umurerwa Daniella 23685</p>
                        <p>Umurerwa Justine 23817</p>
                        <p>Ishimwe Immacule 23970</p>
                    </div>
                </div>
                <hr />
                <p class="text-center">&copy; @DateTime.Now.Year - Group6</p>
            </div>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
